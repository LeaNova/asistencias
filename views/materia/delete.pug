extends ../layout 

block content
    if(item)
        div(class="formu")
            form(class="border form" action="" method="post")
                div.titulo
                    p="¿Seguro que quiere borrar esta materia?"
                div(class="info")
                    p= item.nombre
                    p= "Año de cursada: " + item.ciclo
                div(class="info")
                    p= "Dictado " + item.Dictado.tipoDictado
                    p= "[" + item.inicio + " - " + item.fin + "]"
                div(class="botonera")
                    input(type="submit" id="button-delete" value="Borrar")
                    a(href="/materia" id="button") Volver
    else
        div(class="sub")
            p No se encontro materia